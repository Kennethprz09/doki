{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".", // Root directory for resolving paths
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
    }
  }
}