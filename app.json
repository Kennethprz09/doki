{
  "expo": {
    "newArchEnabled": true,
    "name": "Doki",
    "slug": "doki",
    "scheme": "com.app.doki",
    "owner": "kennethprz09",
    "extra": {
      "eas": {
        "projectId": "439410ef-8376-4395-9906-0a49a644fedc"
      }
    },
    "android": {
      "icon": "./assets/icon_android.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.app.doki",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "ios": {
      "icon": "./assets/icon_ios.png",
      "usesIcloudStorage": true,
      "bundleIdentifier": "com.app.doki",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Permitir el acceso a la cámara para escanear documentos",
        "NSPhotoLibraryUsageDescription": "Permitir el acceso a la galería para seleccionar imágenes",
        "NSPhotoLibraryAddUsageDescription": "Permitir guardar imágenes en la galería"
      }
    },
    "plugins": [
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir el acceso a la cámara para escanear documentos",
          "microphonePermission": "Permitir grabar audio al capturar videos",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      [
        "expo-file-system",
        {
          "allowLegacyDomainAccess": true
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Permita que $(PRODUCT_NAME) guarde sus documentos e imágenes.",
          "savePhotosPermission": "Permitir que $(PRODUCT_NAME) guarde archivos en tus fotos."
        }
      ]
    ]
  }
}
